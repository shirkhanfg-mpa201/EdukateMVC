@using EduKateMVC.ViewModels.TeacherViewModels
@model TeacherCreateVM


<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">

        <form method="post" asp-area="Admin" asp-controller="Teacher" asp-action="Create">
            <div class="form-group">
                <label asp-for="FullName">FullName</label>
                <input type="text" asp-for="FullName" placeholder="Enter fulname">

                <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
