@using EduKateMVC.ViewModels.CourseViewModels

@model CourseUpdateVM


<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">

        <form method="post" enctype="multipart/form-data" asp-area="Admin" asp-controller="Course" asp-action="Update">
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input type="text" asp-for="Title" placeholder="Enter fulname">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl">ImageUrl</label>
                <input asp-for="ImageUrl" placeholder="Enter image">
                <span asp-validation-for="ImageUrl"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating">Rating</label>
                <input type="text" asp-for="Rating" placeholder="Enter rating">
                <span asp-validation-for="Rating"></span>
            </div>

            <select asp-for="TeacherId">
                @foreach (var teacher in ViewBag.Teachers)
                {
                    <option value="@teacher.Id">@teacher.FullName</option>
                }


            </select>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


